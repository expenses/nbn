rule slang
    command = slangc $in -o $out -O3 -warnings-as-errors all
build shaders/compiled/compute.spv: slang shaders/compute.slang | shaders/models.slang shaders/dispatches.slang shaders/uniforms.slang
build shaders/compiled/mesh_shaders.spv: slang shaders/mesh_shaders.slang | shaders/models.slang shaders/common.slang shaders/culling.slang shaders/uniforms.slang
build shaders/compiled/resolve_visbuffer.spv: slang shaders/resolve_visbuffer.slang | shaders/common.slang shaders/gltf.slang shaders/models.slang shaders/visbuffer.slang shaders/uniforms.slang
build shaders/compiled/triangle.spv: slang shaders/triangle.slang
build shaders/compiled/voxelize.spv: slang shaders/voxelize.slang | shaders/gltf.slang shaders/common.slang
